<%= simple_form_for(@task) do |f| %>
  <%= f.input :title %>
  <%= f.input :details %>
  <% unless @task.new_record?() %>
    <%= f.input :completed, as: :boolean, checked_value: :true, unchecked_value: :false %>
  <% end %>
  <%= f.submit %>
<% end %>

<%= link_to 'See all the tasks', '/tasks', class: "btn btn-primary" %>
