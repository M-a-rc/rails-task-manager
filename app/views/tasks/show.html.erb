<h1>Task Details</h1>

<ul>
  <div class="cardos">
    <li><%= @task.title %></li>
    <li><%= @task.details %></li>
    <li><%= @task.completed %></li>
  </div>
</ul>

<%= link_to 'Edit this task', edit_task_path(@task), class: "btn btn-primary" %>
<%= link_to 'See all the tasks', '/tasks', class: "btn btn-primary" %>
