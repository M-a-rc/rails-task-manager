<h1>Task Details</h1>

<ul>
<li><%= @task.title %></li>
<li><%= @task.details %></li>
<li><%= @task.completed %></li>
</ul>

<%= link_to 'Delete this task', tasks_delete_path(@task), method: :delete %>
<%= link_to 'Edit this task', tasks_edit_path(@task) %>
<%= link_to 'See all the tasks', '/tasks' %>
